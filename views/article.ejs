<%- include('header'); -%>
    <div class="content">
        <h1><%= products.reference %></h1>
        <table id="catalog">
            <thead>
                <tr>
                    <th>Reference</th>
                    <th scope="col">Category</th>
                    <th scope="col">Name</th>
                    <th scope="col">Supplier</th>
                    <th scope="col">Price</th>
                    <th scope="col">Vat</th> 
                    <th scope="col">Stock</th> 
                    <th scope"col">Critical Stock</th> 
                </tr>
            </thead>
            <tbody>
                    <tr>
                        <th scope="row">
                            <%= products.reference %>
                        </th>
                        <td>
                            <%= products.category %>
                        </td>
                        <td>
                            <%= products.name %>
                        </td>
                        <td>
                            <%= products.supplier %>
                        </td>
                        <td>
                            <%= products.price %>AED
                        </td>
                        <td>
                            <%= products.vat %>
                        </td>
                        <td>
                            <%= products.stock %>
                        </td>
                        <td>
                            <%= products.critical_stock %>
                        </td>
                    </tr>
            </tbody>
        </table>
    </div>
    <br>
    <%- include('footer'); -%>
